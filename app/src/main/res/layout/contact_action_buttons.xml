<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/contact_button_call"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_call_black_24dp"
        android:tint="@color/green_phone" />

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/contact_button_sms"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_sms_black_24dp"
        android:tint="@color/circle_success" />

    <!-- Edit Button -->
    <ImageButton
        android:id="@+id/contact_button_edit"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_edit_black_24dp"
        android:tint="@color/color_accent_pink" />

    <!-- Add Button -->
    <ImageButton
        android:id="@+id/contact_button_add"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_person_add_black_18dp"
        android:tint="@color/design_default_color_primary"
        android:visibility="gone" />

    <!-- Info Button -->
    <ImageButton
        android:id="@+id/contact_button_info"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_info_black_18dp"
        android:tint="@color/grey_400"
        android:visibility="gone" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/contact_button_delete"
        style="@style/ContactPopup.Button"
        android:src="@drawable/ic_delete_black_18dp"
        android:tint="@color/red_phone" />

</LinearLayout>
